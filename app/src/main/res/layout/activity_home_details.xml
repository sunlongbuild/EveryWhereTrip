<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.main.activity.HomeDetailsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_50" />

    <ImageView
        android:id="@+id/homedetails_back"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_29"
        android:src="@drawable/back_white" />

    <ImageView
        android:id="@+id/homedetails_share"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_320"
        android:layout_marginTop="@dimen/dp_25"
        android:src="@mipmap/share" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/home_details_border"
            android:text="@string/preview"
            android:textColor="@color/c_FA6A13" />

        <Button
            android:id="@+id/home_details_money"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_fa6a13_r15"
            android:textColor="@color/c_F0F0F0" />
    </LinearLayout>

</RelativeLayout>