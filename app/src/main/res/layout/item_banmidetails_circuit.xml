<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cd_cardView"
        app:cardCornerRadius="@dimen/dp_8"
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_450"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_cardURL"
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_450"
            android:layout_below="@id/tv_title"
            android:scaleType="center"
            android:src="@drawable/bg_btn_fa6a13_r15" />

        <RelativeLayout
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_116"
            android:background="#80FFFFFF">

            <TextView
                android:id="@+id/tv_intro"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_37"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_27"
                android:text="@string/app_name"
                android:textSize="@dimen/sp_27" />

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_78"
                android:layout_marginTop="43dp"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_39"
                android:textColor="@color/c_FF999999"
                android:textSize="@dimen/dp_14" />

            <Button
                android:id="@+id/tv_price"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_29"
                android:layout_marginLeft="@dimen/dp_246"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_34"
                android:background="@drawable/bg_btn_fa6a13_r15"
                android:text="￥28.00"
                android:textColor="@color/c_FFFFFFFF"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="@dimen/dp_132"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_64"
                android:text="疯狂购物买买买"
                android:textColor="@color/c_FF636363"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_priceInCents"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_254"
                android:layout_marginTop="@dimen/dp_64"
                android:text="530人购买"
                android:textColor="@color/c_FF636363"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
