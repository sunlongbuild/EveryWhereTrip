<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.main.activity.BanMiDetailsActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/back_black" />

        <TextView
            android:id="@+id/toolBar_title"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_19"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_9"
            android:text="@string/banmi_details"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/share" />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/dp_335"
                android:layout_height="@dimen/dp_300"
                android:layout_margin="@dimen/dp_10">

                <RelativeLayout
                    android:layout_width="@dimen/dp_335"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_160"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:scaleType="centerCrop"
                        android:src="@drawable/zhanweitu_home_kapian_xxxhdpi" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_26"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_toRightOf="@id/iv_head"
                        android:text="杨晨"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_22" />

                    <ImageView
                        android:id="@+id/iv_care"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_102"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_toRightOf="@id/tv_name"
                        android:scaleType="center"
                        android:src="@drawable/follow" />

                    <TextView
                        android:id="@+id/tv_caring"
                        android:layout_width="@dimen/dp_65"
                        android:layout_height="@dimen/dp_17"
                        android:layout_below="@id/tv_name"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_toRightOf="@id/iv_head"
                        android:text="2675人关注"
                        android:textColor="@color/c_FF999999"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_cared"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_14"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/iv_care"
                        android:layout_marginRight="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_6"
                        android:text="已关注"
                        android:textColor="@color/c_FF999999"
                        android:textSize="@dimen/dp_10" />

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_150"
                        android:layout_marginTop="@dimen/dp_135"
                        android:src="@mipmap/position" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/sp_15"
                        android:layout_marginLeft="@dimen/dp_167"
                        android:layout_marginTop="@dimen/dp_133"
                        android:text="东京"
                        android:textColor="@color/c_FF999999"
                        android:textSize="@dimen/dp_12" />

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_150"
                        android:layout_marginTop="@dimen/dp_156"
                        android:src="@drawable/ic_documents" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="@dimen/dp_132"
                        android:layout_height="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_166"
                        android:layout_marginTop="@dimen/dp_154"
                        android:text="日本国家旅游局专栏作者"
                        android:textColor="@color/c_FF999999"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="@dimen/dp_308"
                        android:layout_height="@dimen/dp_88"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_22"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:maxLines="5"
                        android:text="简介：我是杨晨，日本国家旅游局专栏作者。旅居
东京五年时间，遇到了太多美景和惊喜，感谢在这
里得到的一切。对于美的发现，永远是我“在路上”的动力。"
                        android:textColor="@color/c_FF666666"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_27"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                app:tabGravity="center" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>