<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cd_cardView"
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_450"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        app:cardCornerRadius="@dimen/dp_8">

        <ImageView
            android:id="@+id/iv_cardURL"
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_450"
            android:layout_below="@id/tv_title"
            android:scaleType="center"
            android:src="@drawable/bg_btn_fa6a13_r15" />

        <RelativeLayout
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_116"
            android:background="#80FFFFFF">

            <TextView
                android:id="@+id/tv_intro"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_37"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/app_name"
                android:maxLength="8"
                android:textSize="@dimen/sp_27" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentTop="true"
                android:layout_below="@id/tv_intro"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_66"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_62"
                android:textColor="@color/c_FF999999"
                android:textSize="@dimen/dp_14" />

            <Button
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_29"
                android:layout_marginLeft="@dimen/dp_246"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_24"
                android:background="@drawable/bg_btn_fa6a13_r15"
                android:text="￥28.00"
                android:textColor="@color/c_FFFFFFFF"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_85"
                android:text="疯狂购物买买买"
                android:textColor="@color/c_FF636363"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_priceInCents"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_255"
                android:layout_marginTop="@dimen/dp_60"
                android:text="530人购买"
                android:textColor="@color/c_FF636363"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
