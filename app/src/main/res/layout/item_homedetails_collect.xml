<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_watchAppraise"
        android:layout_width="@dimen/dp_86"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_145"
        android:layout_marginTop="@dimen/dp_10"
        android:text="查看全部评价"
        android:textColor="@color/c_FA6A13"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:id="@+id/ll_collect"
        android:layout_width="@dimen/dp_87"
        android:layout_height="@dimen/dp_34"
        android:layout_marginBottom="@dimen/dp_34"
        android:layout_marginLeft="@dimen/dp_145"
        android:layout_marginTop="@dimen/dp_75"
        android:background="@drawable/bg_ffeaeaea_r15"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/collect_default" />

        <TextView
            android:id="@+id/tv_collect"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="@string/collect" />
    </LinearLayout>
</RelativeLayout>
